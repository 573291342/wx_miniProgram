/* pages/home/home.wxss */
swiper {
  height: 350rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}

.grid-list {
  display: flex;
  flex-wrap: wrap;
  border-left: 1rpx solid #efefef;
  border-top: 1rpx solid #efefef;
}
.girs-item {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
  box-sizing: border-box;
}
.girs-item image {
  width: 60rpx;
  height: 60rpx;
}
.girs-item text {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.image-box {
  display: flex;
  justify-content: space-around;
}
.image-box .left,
.image-box .right {
  width: 50%;
  height: 180rpx;
  border-radius: 20rpx;
}
.image-box .left{
  background-color: pink;
}
.image-box .right{
  background-color: skyblue;
}